@model ConsumingWebApi.Models.UserRoom.CreateUserRoom

<h1 align="center">Join Room</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="AddUsersToRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input  asp-for="RoomId" class="form-control" required/>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input multiple asp-for="UserId" class="form-control" required />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
    </div>
</div>
@section Scripts
    {
      @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}



