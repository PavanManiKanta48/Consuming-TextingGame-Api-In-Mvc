@model ConsumingWebApi.Models.User.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div id="container">
<h1 align="center">Login</h1>

    <div align="center" >
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="email" asp-for="EmailId" placeholder="email@example.com" class="form-control" required="" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" placeholder="password" class="form-control" required="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="text-align:end">
                </div>
                <div class="form-group" align="justify">
                    <input type="submit" value="Login" class="btn btn-primary" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a asp-action="ForgetPwd" id="p1">Forget Password</a>
                </div>
            </form>
            <br />
            @*<p id="p2">Don't have an account? <a asp-action="Register">Register</a></p>*@
        </div>
    </div>
</div>
    




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("p2").style.color = "purple";
        document.getElementById("p1").style.color = "LightSeaGreen";
        document.getElementById("p3").style.color = "red";
    </script>
     
}


