@model ConsumingWebApi.Models.Room.EditRoom

@{
    ViewData["Title"] = "EditRoom";
}

<h1>EditRoom</h1>

<h4>EditRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RoomDetails">Back to RoomDetails</a>
</div>

