@model ConsumingWebApi.Models.Room.CreateRoom

@{
    ViewData["Title"] = "CreateRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 align="center"  style="color:aqua">CreateRoom</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="CreateRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div align="center">
        <a asp-action="Index" class="btn btn-outline-info">Back to RoomList</a>
    </div>
</div>
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
